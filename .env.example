# Coser社群机器人 - 环境变量配置示例
# 请复制此文件为.env并填写您的配置

# 基本配置
BOT_TOKEN=YOUR_BOT_TOKEN_HERE  # Telegram Bot Token，从BotFather处获取
BOT_USERNAME=your_bot_username  # 不需要包含@符号
ADMIN_IDS=123456789,987654321  # 管理员ID列表，用逗号分隔
WEBHOOK_URL=  # 如果使用Webhook模式，填写webhook URL
WEBHOOK_SECRET=  # Webhook密钥，任意字符串
DEBUG=false  # 是否启用调试模式

# 数据库配置
DATABASE_PATH=coser_bot.db  # SQLite数据库路径
BACKUP_DIR=backups  # 备份目录
BACKUP_INTERVAL=86400  # 备份间隔(秒)

# 日志配置
LOG_LEVEL=INFO  # 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_DIR=logs  # 日志目录
MAX_LOG_SIZE=10485760  # 最大日志大小(字节)
LOG_BACKUP_COUNT=5  # 日志备份数量

# 功能配置
POINTS_PER_CHECKIN=10  # 每次签到获得的基础积分
STREAK_BONUS_DAYS=7,14,21,28  # 连续签到奖励天数，用逗号分隔
STREAK_BONUS_POINTS=5,10,15,20  # 连续签到奖励积分，与天数对应
MAKEUP_COST=5  # 补签花费积分

# 监控配置
HEALTH_CHECK_INTERVAL=300  # 健康检查间隔(秒)
HEALTH_CHECK_URL=  # 健康检查URL

# 高级配置
SESSION_TIMEOUT=3600  # 会话超时时间(秒)
COMMAND_TIMEOUT=60  # 命令执行超时时间(秒)
MAX_CONNECTIONS=40  # 最大并发连接数
RETRY_AFTER=5  # 重试间隔(秒)

